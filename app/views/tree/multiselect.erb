<h1>マルティセレクト（複数選択）</h1>
<%= form_for :employer, remote: true do |f| %>
<div class="col-md-3 col-md-offset-2"> </div>
<div class="btn-group" role="group" aria-label="...">
  <button type="button" class="btn btn-default">　
  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>　
  </button>
  <button type="submit" class="btn btn-default">　
    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>　
  </button>
</div>


<table id="multiselect_table" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
  <thead>
  <tr>
    <th></th>
    <th>Name</th>
    <th>Position</th>
    <th>Office</th>
    <th>Age</th>
    <th>Start date</th>
    <th>Salary</th>
  </tr>
  </thead>

  <tfoot>
  <tr>
    <th></th>
    <th>Name</th>
    <th>Position</th>
    <th>Office</th>
    <th>Age</th>
    <th>Start date</th>
    <th>Salary</th>
  </tr>
  </tfoot>

  <tbody>
  <% @employers.each do |employwer| %>
  <tr>
    <th><%= check_box_tag "delete[#{employwer.id}]", 1 %></th>
    <td><a href="" > <%= employwer.first_name %></a></td>
    <td><%= employwer.position %></td>
    <td><%= employwer.office %></td>
    <td><%= employwer.age %></td>
    <td><%= employwer.start_date %></td>
    <td><%= employwer.salary %></td>
  </tr>
  <% end %>
  </tbody>
</table>
<% end %>
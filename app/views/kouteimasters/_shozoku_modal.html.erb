<div class="modal fade" id="select_shozoku_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">所属選択</h4>
      </div>
      <div class="modal-body">
        <%# Render the new person form (passing modal => true to enable remote => true) %>

        <table id="shozoku_search_table" class="table table-striped table-bordered table-hover" cellspacing="0">
          <thead>
          <tr>
            <th>所属コード</th>
            <th>所属名称</th>
          </tr>
          </thead>

          <tbody>
          <% @shozokus.each do |shozoku| %>
              <tr>
                <td><%= shozoku.所属コード %></td>
                <td><%= shozoku.所属名 %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal" id="sozoku_ok">　ＯＫ　</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
      </div>
    </div>
  </div>
</div>
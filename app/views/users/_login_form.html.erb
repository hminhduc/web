<div class="col-md-4 col-md-offset-4">
  <div class="well">


<%= form_for :user, url: users_path, html:{class: 'form-horizontal'}  do |f| %>
  <div class="form-group">
    <div class="field">
      <%= f.label :担当者コード, class: 'col-md-4 control-label' %>
      <div class="col-md-8">
        <%= f.text_field :担当者コード, class: 'form-control', placeholder: 'ID' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :パスワード, class: 'col-md-4 control-label' %>
      <div class="col-md-8">
        <%= f.password_field :パスワード, class: 'form-control', placeholder: 'パスワード' %>
      </div>
    </div>
  </div>

  <!--<div class="form-group">-->
    <!--<div class="col-md-5 col-md-offset-2">-->
      <!--<span id="notice"><%# flash[:notice] %></span>-->
    <!--</div>-->
  <!--</div>-->
  
  <div class="form-group">
    <div class="col-md-8 col-md-offset-4">
      <%= f.submit 'ログイン', class: 'btn btn-primary' %>
    </div>
  </div>

<% end %>
    <div class="col-md-4 col-md-offset-9">
        <%= link_to '新規登録', new_user_path %>
    </div>

  </div>
</div>